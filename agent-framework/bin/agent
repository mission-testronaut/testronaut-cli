#!/usr/bin/env node
import { runWorkflow } from '../runner/agentRunner.js';
import { loginWorkflow } from '../workflows/loginWorkflow.js';

const workflows = {
  login: loginWorkflow,
};

const name = process.argv[2];
if (!name || !workflows[name]) {
  console.log('Usage: agent <workflow>');
  console.log('Available workflows:', Object.keys(workflows).join(', '));
  process.exit(1);
}

await runWorkflow(workflows[name]);